<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.shilkin.sergey.creditcard.MainActivity"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сумма кредита"
        android:id="@+id/textView"
        android:layout_margin="5dp"
        android:padding="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sumCredit"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Введите сумму кредита"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Годовой процент"
        android:id="@+id/textProcent"
        android:layout_margin="5dp"
        android:padding="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sumProcent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Введите процентную ставку"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ежемесячный платеж"
        android:id="@+id/textPay"
        android:layout_margin="5dp"
        android:padding="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sumPay"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Введите ежемесячный платеж"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Рассчитать"
        android:id="@+id/buttonCalc"
        android:padding="12dp"
        android:margin = "5dp"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Количество месяцев"
        android:id="@+id/textMonth"
        android:layout_margin="5dp"
        android:padding="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sumMonth"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Количество месяцев"/>
</LinearLayout>
